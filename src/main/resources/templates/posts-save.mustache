{{>layout/header}}

<div class="container">
    <h1>게시글 등록</h1>

    <div class="col-md-12">
        <div class="col-md-4">
            <form>
                <div class="form-group">
                    <label for="title">제목</label>
                    <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
                </div>
                <div class="form-group">
                    <label for="title">작성자</label>
                    <input type="text" class="form-control" id="author" value="{{loginUserName}}" readonly>
                </div>
                <div class="form-group">
                    <label for="title">내용</label>
                    <textarea class="form-control" id="content" placeholder="내용을 입력하세요"></textarea>
                </div>
                <div class="form-group" id="board">
                    <!-- 게시판 구별용 input -->
                </div>
            </form>
            <a href="javascript:history.back();" role="button" class="btn btn-secondary">취소</a>
            <button type="button" class="btn btn-primary" id="btn-save">등록</button>
        </div>
    </div>
</div>

<script language="JavaScript">
    var queryString = location.href.split("?");
    var queryList = queryString[1].split("&");
    var query = queryList[0].split("=");
    var boardName = query[1];
    document.getElementById("board").innerHTML=`<input type="hidden" id="boardName" name="name" value="` + boardName + `">`;
</script>


{{>layout/footer}}