{{>layout/header}}

<div class="container">
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong text-center">
        <tr>
            <th width="70">글번호</th>
            <th>제목</th>
            <th width="150">작성자</th>
            <th width="70">조회수</th>
            <th width="150">최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody" class="text-center">
        {{#posts}}
            <tr>
                <td>{{no}}</td>
                <td class="text-left"><a href="/posts/view/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{viewCount}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
    {{#boardName}}
        <div class="float-right">
            <a href="/posts/save?name={{boardName}}" role="button" class="btn btn-primary">글쓰기</a>
        </div>
    {{/boardName}}
</div>

{{>layout/footer}}